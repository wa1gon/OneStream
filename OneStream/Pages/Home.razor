@page "/"

<PageTitle>Home</PageTitle>
<div class="container">
    <div class="first-column">
        <div class="call-input">
            <MatTextField @bind-Value="@Callsign" Dense="true" Label="Callsign"></MatTextField>
            <MatButton OnClick="LookupClick" Raised="true">Go</MatButton>
        </div>
        <hr />
        <div class="notes-input">
            <p>
                <MatTextField @bind-Value="@Notes" Dense="true" Rows="10" Label="Notes" TextArea="true" FullWidth="true"></MatTextField>
            </p>
        </div>

        <div class="notes-button justify-space-between">
            <MatButton OnClick="AddNotesClick" Raised="true">Add Notes</MatButton>
            <MatButton OnClick="ReplaceNotesClick" Raised="true">Replace Notes</MatButton>
        </div>
    </div>
    <div class="second-column">
        <b>Name:</b> @CallInfo.Name<br/>
        <b>Callsign:</b> @CallInfo.Current.Callsign<br/>
        <b>Address:</b> @CallInfo.Address.Line1<br/>
        <b>City:</b> @CallInfo.Address.Line2<br />
        <b>Expire Date:</b> @CallInfo.OtherInfo.ExpiryDate<br />
        <b>Notes:</b> @CallInfo.Notes<br />
     </div>
</div>
